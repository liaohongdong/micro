{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/@fe-micro/*"
  ],
  "version": "independent",
  "command": {
    "publish": {
      "ignoreChanges": [
        "**/__fixtures__/**",
        "**/__tests__/**",
        "**/test/**",
        "**/node_modules/**",
        "**/.browserslistrc",
        "**/.editorconfig",
        "**/.eslintignore",
        "**/.eslintrc.js",
        "**/.npmignore",
        "**/babel.config.js",
        "**/vue.config.js"
      ],
      "ignore": [
        "eslint-config-micro"
      ],
      "message": "chore: publish"
    }
  }
}
